#include<stdio.h>
#include<stdlib.h>

#include<time.h>
 
void menu()
{
     printf("***************\n");
         printf("********1.play*****\n");
          printf("******0.stop*******\n");
           printf("***************\n"); 
}

void game()
{
    
    RAND_MAX;
    int guess = 0;

    int ret = rand()%100+1;
    printf("%d\n",ret);

    while(1)
    {
         printf("请猜猜数字:>");
    scanf("%d",&guess);
    if(guess<ret)
        printf("猜小了\n");
    else if(guess>ret)
        printf("猜大了\n");
    else
    {
        printf("恭喜你猜对了\n");
        break;
    }
    }
   
}
int main()
{
    //srand的使用
    //还有就是整体的结构
    srand((unsigned int)time(NULL));

    int input = 0;

    do
    {
        menu();
        printf("请选择:>");
        scanf("%d",&input);
        switch(input)
        {
        case 1:
            printf("猜数字\n");
            game();
            break;
        case 0:
            printf("退出游戏\n");
            break;
        default:   
            printf("选择错误，重新选择\n");
            break;

        }
    } while (input);
    

    return 0;

}
